<resources>

    <style name="EmbassatTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/background</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="EmbassatTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:displayOptions"></item>
    </style>

    <style name="MainMenuOptionText" parent="android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/selectable_text_color</item>
        <item name="android:textSize">@dimen/main_option_text_size</item>
    </style>

    <style name="InfoTitle" parent="android:style/TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/info_title_text_size</item>
        <item name="android:layout_marginTop">@dimen/info_title_margin</item>
        <item name="android:layout_marginLeft">@dimen/info_title_margin</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="InfoText" parent="android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/info_text_text_size</item>
        <item name="android:layout_margin">@dimen/info_title_margin</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
